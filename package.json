{
  "name": "react-nextjs-and-expo-react-native-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "development/*",
    "packages/*"
  ],
  "nohoist": [
    "**/react-native-css-interop",
    "**/react-native-css-interop/**",
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "prepare": "husky",
    "format": "prettier . --write --ignore-path .prettierignore",
    "build:configs:tokens": "yarn workspace @shared/configs build:tokens",
    "turbo:configs:tokens": "turbo run build --filter=@shared/configs",
    "build:schemas": "yarn workspace @shared/schemas build",
    "turbo:schemas": "turbo run build --filter=@shared/schemas",
    "build:services": "yarn workspace @shared/services build",
    "turbo:services": "turbo run build --filter=@shared/services",
    "build:stores": "yarn workspace @shared/stores build",
    "turbo:stores": "turbo run build --filter=@shared/stores",
    "dev:mobile-ui": "yarn workspace @shared/mobile-ui-dev start -c",
    "build:mobile-ui": "yarn workspace @shared/mobile-ui build",
    "turbo:mobile-ui": "turbo run build --filter=@shared/mobile-ui",
    "dev:web-ui": "yarn workspace @shared/web-ui-dev dev",
    "turbo:dev:web-ui": "turbo run dev --filter=@shared/web-ui-dev",
    "build:web-ui": "yarn workspace @shared/web-ui build",
    "turbo:web-ui": "turbo run build --filter=@shared/web-ui",
    "dev:web": "yarn workspace nextjs-web-app dev",
    "turbo:dev:web": "turbo run dev --filter=nextjs-web-app",
    "build:web": "yarn workspace nextjs-web-app build",
    "turbo:build:web": "turbo run build --filter=nextjs-web-app",
    "dev:mobile": "yarn workspace expo-mobile-app start -c",
    "turbo:dev:mobile": "turbo run dev --filter=expo-mobile-app",
    "build": "yarn build:configs:tokens && yarn build:schemas && yarn build:services && yarn build:stores && yarn build:mobile-ui && yarn build:web-ui",
    "turbo:build:packages": "turbo run build --filter='./packages/**'",
    "turbo:build": "turbo run build",
    "turbo": "dotenv -- npx turbo run deploy",
    "cleanup": "node scripts/cleanup.js",
    "test": "jest --config=jest.config.js",
    "test:web": "cd apps/nextjs-web-app && jest --config=jest.config.js",
    "test:mobile": "cd apps/expo-mobile-app && jest --config=jest.config.js",
    "storybook:web": "yarn workspace @shared/web-ui-dev storybook",
    "storybook:mobile": "yarn workspace @shared/mobile-ui-dev storybook",
    "backstop:reference": "backstop reference --config=backstop.config.js",
    "backstop:test": "backstop test --config=backstop.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-flow-strip-types": "^7.23.3",
    "@babel/plugin-transform-private-methods": "^7.23.3",
    "@babel/plugin-transform-private-property-in-object": "^7.23.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint-community/eslint-utils": "^4.2.0",
    "@eslint/eslintrc": "^2.1.4",
    "@eslint/js": "8.57.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/backstopjs": "^6",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "babel-jest": "30.0.0-beta.3",
    "backstopjs": "^6.3.25",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-scope": "^7.2.2",
    "eslint-visitor-keys": "^3.4.3",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "30.0.0-beta.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.0.0",
    "turbo": "^2.5.4",
    "typescript": "~5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ]
  },
  "description": "React Next.js and Expo React Native Monorepo",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "rimraf": "^6.0.1"
  }
}
